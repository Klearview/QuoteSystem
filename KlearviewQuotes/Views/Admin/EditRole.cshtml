@using KlearviewQuotes.Models.Identity
@using Microsoft.AspNetCore.Identity
@model RoleEdit
  
<h2>Update Role</h2>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>
  
<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />
      
    <h3 class="p-1">Add To @Model.Role.Name</h3>
    <table class="table">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            <thead>
                <tr>
                    <th>User</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (IdentityUser user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="AddIds" value="@user.Id">
                        </td>
                    </tr>
                }

            </tbody>
        }
    </table>
  
    <h3 class="p-1">Remove From @Model.Role.Name</h3>
    <table class="table">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            <thead>
                <tr>
                    <th>User</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (IdentityUser user in Model.Members)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="DeleteIds" value="@user.Id">
                        </td>
                    </tr>
                }

            </tbody>
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>