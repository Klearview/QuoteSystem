@model KlearviewQuotes.Models.Quote

<style>

    .container-lg {
        width: max-content;
        padding-right: 0;
        padding-left: 0;
        margin-right: 0;
        margin-left: 0;
    }

    .preview {
        border: none !important;
        padding: 0 !important;
    }

    header {
        display: none;
    }

    footer {
        display: none;
    }

</style>

<div class="preview-wrapper">
    <partial name="_PreviewPartial" />
</div>

@section Scripts {
    <script>
        
        $(document).ready(function() {
            window.print();

            window.onafterprint = () => {
                setTimeout(function(){ 
                    window.close();
                }, 1000)
            }
        })

    </script>
}